<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Alarm_clock_java" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="AppDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="time_picker_style" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/main_style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:background">@color/background_no_white</item>

    </style>


    <style name="style_calendar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/main_style</item> //цвет кружка выбранного дня
    </style>


    <style name="switch_style" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/main_style</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>


    </style>

    <style name="search_view_style" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/main_style</item>
    </style>

    <style name="seekBar_style" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/main_style_light</item>
        <item name="android:progressTint">@color/main_style</item>
        <item name="android:thumbTint">@color/main_style</item>
    </style>

</resources>